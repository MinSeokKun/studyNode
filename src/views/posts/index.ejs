<!-- src/views/posts/index.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>게시판</title>
</head>
<body>
    <div class="container">
        <h1>게시판</h1>
        <a href="/posts/create" class="btn btn-primary mb-3">글쓰기</a>
        
        <% if (posts.length > 0) { %>
            <table class="table">
                <thead>
                    <tr>
                        <th>번호</th>
                        <th>제목</th>
                        <th>작성자</th>
                        <th>작성일</th>
                    </tr>
                </thead>
                <tbody>
                    <% posts.forEach(post => { %>
                        <tr>
                            <td><%= post.id %></td>
                            <td><a href="/posts/<%= post.id %>"><%= post.title %></a></td>
                            <td><%= post.User.username %></td>
                            <td><%= post.createdAt.toLocaleDateString() %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p>게시글이 없습니다.</p>
        <% } %>
    </div>
</body>
</html>